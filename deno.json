{
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "tasks": {
        "chat": "deno run --allow-net --allow-read --allow-write --allow-env --env-file src/interactive.ts",
        "demo": "deno run --allow-net --allow-read --allow-write --allow-env --env-file main.ts",
        "test": "deno test --allow-net --allow-read --allow-write --allow-env tests/",
        "build:windows": "deno compile --allow-all --reload --output ./bin/rohbot-windows.exe src/interactive.ts",
        "build:macos": "deno compile --allow-all --reload --output ./bin/rohbot-macos src/interactive.ts",
        "build:all": "deno task build:windows && deno task build:macos"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": [
            "src/",
            "tests/",
            "main.ts"
        ],
        "exclude": [
            "bin/"
        ]
    },
    "lint": {
        "include": [
            "src/",
            "tests/",
            "main.ts"
        ],
        "exclude": [
            "bin/"
        ]
    },
    "imports": {
        "@langchain/core/messages": "npm:@langchain/core@^0.3.72/messages",
        "@langchain/core/tools": "npm:@langchain/core@^0.3.72/tools",
        "@langchain/openai": "npm:@langchain/openai@^0.6.9",
        "@langchain/langgraph": "npm:@langchain/langgraph@^0.4.6",
        "@langchain/langgraph/prebuilt": "npm:@langchain/langgraph@^0.4.6/prebuilt",
        "zod": "npm:zod@^3.25.76"
    }
}
{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": false,
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": false,
        "sourceMap": false,
        "resolveJsonModule": true,
        "incremental": true,
        "noEmitOnError": false,
        "isolatedModules": true,
        "verbatimModuleSyntax": false
    },
    "include": ["src/**/*.ts", "main.ts"],
    "exclude": ["node_modules", "dist", "docs", "**/*.test.ts", "**/*.spec.ts"],
    "ts-node": {
        "transpileOnly": true
    }
}
